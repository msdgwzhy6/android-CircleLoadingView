<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="com.cxmscb.cxm.circleloadingview.MainActivity">

    <com.cxmscb.cxm.circleloadingview.CircleLoadingView
        android:id="@+id/clv"
        android:background="#ffffff"
        app:radius="6dp"
        app:maxOffset="22dp"
        app:minOffset="12dp"
        app:colors="@array/colors0"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.cxmscb.cxm.circleloadingview.CircleLoadingView
        android:background="#ffffff"
        app:radius="6dp"
        app:maxOffset="22dp"
        app:minOffset="12dp"
        app:colors="@array/colors"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.cxmscb.cxm.circleloadingview.CircleLoadingView
        android:background="#ffffff"
        app:radius="6dp"
        app:maxOffset="22dp"
        app:minOffset="12dp"
        app:colors="@array/colors1"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.cxmscb.cxm.circleloadingview.CircleLoadingView
        android:background="#ffffff"
        app:radius="6dp"
        app:maxOffset="22dp"
        app:minOffset="12dp"
        app:colors="@array/colors2"
        android:layout_margin="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>
